<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_begin="16dp"
            android:orientation="vertical"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical|center_horizontal|center"
            android:id="@+id/numberInput">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="177dp"
                tools:layout_editor_absoluteX="0dp"
                android:orientation="horizontal">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button7"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:onClick="onClickIntBtn"
                    android:text="7"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button8"
                    app:layout_constraintStart_toEndOf="@+id/button7"
                    android:layout_marginStart="8dp"
                    android:onClick="onClickIntBtn"
                    android:text="8"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button9"
                    app:layout_constraintStart_toEndOf="@+id/button8"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:onClick="onClickIntBtn"
                    android:text="9"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="177dp"
                tools:layout_editor_absoluteX="0dp"
                android:orientation="horizontal">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button4"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:onClick="onClickIntBtn"
                    android:text="4"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button5"
                    app:layout_constraintStart_toEndOf="@+id/button4"
                    android:layout_marginStart="8dp"
                    android:onClick="onClickIntBtn"
                    android:text="5"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button6"
                    app:layout_constraintStart_toEndOf="@+id/button5"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:onClick="onClickIntBtn"
                    android:text="6"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteY="177dp"
                tools:layout_editor_absoluteX="0dp"
                android:orientation="horizontal">

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    android:onClick="onClickIntBtn"
                    android:text="1"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button2"
                    app:layout_constraintStart_toEndOf="@+id/button1"
                    android:layout_marginStart="8dp"
                    android:onClick="onClickIntBtn"
                    android:text="2"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button3"
                    app:layout_constraintStart_toEndOf="@+id/button2"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="16dp"
                    android:onClick="onClickIntBtn"
                    android:text="3"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="25dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/numberInput"
            android:id="@+id/dieInput">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:text="d4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonD4"
                    android:onClick="onClickDieBtn"
                    android:layout_weight="1"/>

            <Button
                    android:text="d6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonD6"
                    android:onClick="onClickDieBtn"
                    android:layout_weight="1"/>

            <Button
                    android:text="d8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonD8"
                    android:onClick="onClickDieBtn"
                    android:layout_weight="1"/>

            <Button
                    android:text="d10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonD10"
                    android:onClick="onClickDieBtn"
                    android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:text="d12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonD12"
                    android:onClick="onClickDieBtn"
                    android:layout_weight="1"/>

            <Button
                    android:text="d20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonD20"
                    android:onClick="onClickDieBtn"
                    android:layout_weight="1"/>

            <Button
                    android:text="d100"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonD100"
                    android:onClick="onClickDieBtn"
                    android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
            android:text="Welcome to the amazing dice roller\nInput a number then select a die to roll that many dice\n\n"
            android:scrollbars = "vertical"
            android:gravity="bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/outputView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/dieInput"/>

</android.support.constraint.ConstraintLayout>